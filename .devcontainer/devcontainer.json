{
  "name": "Smart Restaurants DevContainer",
  "forwardPorts": [5050],
  "portsAttributes": {
    "5050": {
      "label": "Backend API",
      "onAutoForward": "ignore",
      "visibility": "public"
    }
  },
  "postCreateCommand": "npm install --prefix backend",
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.liveserver"
      ],
      "settings": {
        "liveServer.settings.root": "/frontend"
      }
    }
  }
}
