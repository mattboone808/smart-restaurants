{
  "name": "Smart Restaurants DevContainer",
  "forwardPorts": [5050, 5500, 5501, 5502],
  "portsAttributes": {
    "5050": {
      "label": "Backend API",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    "5500": {
      "label": "Frontend (Live Server)",
      "onAutoForward": "openBrowser",
      "visibility": "private"
    }
  },
  "postCreateCommand": "npm install --prefix backend",
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.liveserver"
      ],
      "settings": {
        "liveServer.settings.root": "/frontend"
      }
    }
  }
}
